// tab navigator

const Tab = createBottomTabNavigator()

<Tab.Navigator
          screenOptions={({ route }) => ({
            headerStyle: { backgroundColor: 'tomato' },
            tabBarIcon: ({ focused, color, size }) => {
              let iconName

              if (route.name === 'Home') {
                iconName = focused ? 'home' : 'home'
              } else if (route.name === 'Courses') {
                iconName = focused ? 'reader' : 'reader'
              } else if (route.name === 'About') {
                iconName = focused
                  ? 'ios-information-circle'
                  : 'ios-information-circle'
              }

              return <Ionicons name={iconName} size={size} color={color} />
            },

            tabBarActiveTintColor: 'tomato',
            tabBarInactiveTintColor: 'gray',
          })}
        >
          <Tab.Screen name="Home" component={HomeScreen} />
          <Tab.Screen name="Courses" component={CourseScreen} />
          <Tab.Screen name="About" component={AboutScreen} />
        </Tab.Navigator>



/* Home screen 2 */

const HomeScreen = ({ navigation }) => {
  const [isOpenSignUpModal, setIsOpenSignUpModal] = useState('false')
  navigation.setOptions({
    headerRight: () => (
      <Pressable onPress={() => setIsOpenSignUpModal(true)}>
        <FontAwesome name="user-circle" size={24} color="black" />
      </Pressable>
    ),
  })
  return (
    <SafeAreaProvider>
      <View style={{ flex: 1, alignItems: 'center', justifyContent: 'center' }}>
        <Modal visible={isOpenSignUpModal} animationType="slide">
          <Text>I'm a sign up modal</Text>
          <Pressable
            style={styles.closeIcon}
            onPress={() => setIsOpenSignUpModal(false)}
          >
            <Entypo name="cross" size={32} color="black" />
          </Pressable>
        </Modal>
        <Text>Home!</Text>
      </View>
    </SafeAreaProvider>
  )
}
export default HomeScreen

const styles = StyleSheet.create({
  closeIcon: {
    position: 'absolute',
    right: 5,
    top: 5,
  },
})


